---
const skillCategories = [
  {
    title: 'Backend',
    icon: 'üîß',
    skills: ['.NET', 'C#', 'ASP.NET Core', 'Entity Framework', 'SQL Server', 'REST APIs'],
  },
  {
    title: 'Frontend',
    icon: 'üé®',
    skills: ['React', 'TypeScript', 'JavaScript', 'HTML/CSS', 'Tailwind CSS', 'Next.js'],
  },
  {
    title: 'Cloud & DevOps',
    icon: '‚òÅÔ∏è',
    skills: ['Azure', 'CI/CD', 'Docker', 'Git', 'Azure DevOps', 'GitHub Actions'],
  },
  {
    title: 'Tools & Practices',
    icon: '‚ö°',
    skills: ['Agile/Scrum', 'TDD', 'Clean Architecture', 'Design Patterns', 'Microservices'],
  },
];
---

<section id="skills" class="py-20 px-4 sm:px-6 lg:px-8 bg-light-surface dark:bg-dark-surface">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold mb-12 text-center">
      Skills & Expertise
    </h2>

    <div class="grid md:grid-cols-2 gap-6">
      {skillCategories.map((category, index) => (
        <div
          class="p-6 rounded-xl border border-light-border dark:border-dark-border
                 bg-light-bg dark:bg-dark-bg
                 hover:border-light-accent dark:hover:border-dark-accent
                 transition-all duration-300 hover:shadow-lg animate-slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="flex items-center gap-3 mb-4">
            <span class="text-3xl" role="img" aria-label={category.title}>
              {category.icon}
            </span>
            <h3 class="text-xl font-semibold">{category.title}</h3>
          </div>
          
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span
                class="px-3 py-1.5 text-sm rounded-lg
                       bg-light-surface dark:bg-dark-surface
                       text-light-text dark:text-dark-text
                       border border-light-border dark:border-dark-border
                       hover:border-light-accent dark:hover:border-dark-accent
                       transition-colors duration-200"
              >
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
